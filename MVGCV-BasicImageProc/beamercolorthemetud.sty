\mode<presentation>

% outer theme colors
\setbeamercolor{normal text}{fg=ATUGreen}
\setbeamercolor{alerted text}{fg=ATUTeal}
\setbeamercolor{example text}{fg=ATUNavy}

\setbeamercolor*{structure}{fg=ATUGreen} %This will set title colour but also all bullets and the work 'Figure' etc

\setbeamercolor*{decoration}{fg=ATUSand,bg=ATUGreen} %all decoration and text at the bottom of the slide

\setbeamercolor*{palette primary}{use=decoration,fg=decoration.fg,bg=decoration.bg}
\setbeamercolor*{palette secondary}{parent=palette primary} %section at the bottom of the slides with Author name and notes
\setbeamercolor*{palette tertiary}{parent=palette secondary}
\setbeamercolor*{palette quaternary}{use=palette primary,bg=palette primary.fg}




\setbeamercolor{separation line}{bg=ATUOrange}
\setbeamercolor{fine separation line}{parent=separation line}

\setbeamercolor{upper separation line foot}{parent=fine separation line}
\setbeamercolor{middle separation line foot}{parent=separation line,bg=ATUOrange} %Separation line bottom of all slides
\setbeamercolor{lower separation line foot}{parent=separation line}

\setbeamercolor{titlelike}{fg=ATUOrange}

%inner theme colors
\setbeamercolor{title block body}{fg=ATUOrange}
\setbeamercolor{title}{parent=title block body}
\setbeamercolor{subtitle}{parent=title}
\setbeamercolor{institute}{parent=structure}
\setbeamercolor{author}{parent=title block body}
\setbeamercolor{date}{parent=author}


\setbeamercolor{block title}{parent=normal text,bg=ATUGreen}
\setbeamercolor{block title alerted}{parent=block title,bg=tudYellow}
\setbeamercolor{block title example}{parent=block title,bg=ATUGreen}

\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg!50!bg}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg!50!bg}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=block title example.bg!50!bg}

\setbeamercolor{item projected}{use=item,fg=tudWhite,bg=item.fg}

\mode
<all>
